{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "types": [
            "node"
        ],
        "allowJs": true,
        "noEmit": true
    },
    "include": [
        "src/**/*.js"
    ]
}